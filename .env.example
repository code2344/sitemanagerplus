# =====================================================
# SiteManager+ - Ultra Fault-Tolerant Server Config
# =====================================================

# === SERVER ===
PORT=3000
NODE_ENV=production
STATIC_SITE_DIR=./website

# === AUTHENTICATION ===
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123
MAINTENANCE_USERNAME=ops
MAINTENANCE_PASSWORD=changeme456

# === CLUSTER & HEALTH ===
WORKER_COUNT=4
MEMORY_THRESHOLD_MB=256
HEARTBEAT_INTERVAL_MS=5000
HEARTBEAT_TIMEOUT_MS=15000
RESTART_THRESHOLD=5
RESTART_WINDOW_MS=60000

# === EMAIL ALERTS (Resend) ===
RESEND_API_KEY=re_your_resend_api_key_here
ADMIN_EMAIL=admin@example.com
ALERT_EMAILS=admin@example.com,ops@example.com

# === MULTI-CHANNEL ALERTS ===
# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/CHANNEL_ID/TOKEN

# PagerDuty integration
PAGERDUTY_INTEGRATION_KEY=YOUR_PAGERDUTY_KEY

# Custom webhook endpoint
CUSTOM_WEBHOOK_URL=https://your-webhook.example.com/alerts

# Quiet hours (don't send alerts during these times)
# Format: HH:MM-HH:MM (e.g., 22:00-08:00 for 10 PM to 8 AM)
ALERT_QUIET_HOURS=22:00-08:00

# === SSL/TLS ===
# Enable HTTPS (certificates auto-generated if missing)
ENABLE_HTTPS=false

# === MAINTENANCE ===
MAINTENANCE_PAGE_DIR=./maintenance
MAINTENANCE_FILE=./data/maintenance-state.json

# === SCHEDULED TASKS ===
# Cron expression for rolling restart (e.g., daily at 2 AM)
# Leave empty to disable
SCHEDULED_ROLLING_RESTART=

# === LOGGING ===
LOG_DIR=./logs
LOG_RETENTION_DAYS=7

# === PLUGINS ===
# Enable plugin system
ENABLE_PLUGINS=true

# === DEVELOPMENT ===
# Set to 'development' for dev mode (auto-reload, detailed logs, load testing)
# NODE_ENV=development
